{
  "version": 2,
  "builds": [
    { "src": "frontend/**", "use": "@vercel/static" }
  ],
  "redirects": [
    { "source": "/index.html", "destination": "/", "permanent": true }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://bgremover-backend-pqrgdlxdla-uc.a.run.app/api/$1" },
    { "source": "/blog/", "destination": "https://bgremover-backend-pqrgdlxdla-uc.a.run.app/blog" },
    { "source": "/blog", "destination": "https://bgremover-backend-pqrgdlxdla-uc.a.run.app/blog" },
    { "source": "/blog/(.*)", "destination": "https://bgremover-backend-pqrgdlxdla-uc.a.run.app/blog/$1" },
    { "source": "/(.*)", "destination": "/frontend/$1" }
  ]
}
